{
    "ecmaFeatures": {
        "blockBindings"         :   true,
        "forOf"                 :   true,
        "jsx"                   :   true,
        "generators"            :   true,
        "modules"               :   true
    },

    "env": {
        "browser"               :   true,
        "node"                  :   true
    },

    "rules": {
        "quotes"                :   [1, "single"],
        "no-multi-spaces"       :   0,
        "key-spacing"           :   0,
        "semi"                  :   2,
        "new-cap"               :   0
    },

    "plugins": [ "react" ]
}